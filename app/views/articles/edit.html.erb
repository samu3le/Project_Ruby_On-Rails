<%= form_with(model: @article, local:true) do |form|%>
    <div>
        <%= form.label :title%>
        <%= form.text_field :title%>
    </div>

    <div class="field">
        <%= form.label :content %>
        <%= form.rich_text_area :content %>
    </div>

    <%= @article.content %>

    <div>
        <%= form.submit%>
    </div>
    
<%end%>