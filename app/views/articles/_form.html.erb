<%= form_with(model: @article, local:true) do |form|%>
    <div class="field">
        <%= form.label :title%>
        <%= form.text_field :title%>
    </div>

    <div class="field">
        <%= form.label :category_elements %>
        <div class="row">
            <% @categories.each do |category| %>
                <label class="col-6 col-sm-4">
                    <%= form.check_box :category_elements, {multiple: true}, category.id, nil %>
                    <label class="form-check-label" for="flexCheckChecked">
                        <%= category.title%>
                    </label>
                    
                </label>
            <% end %>
        </div>
    </div>

    <div class="field">
        <%= form.label :content %>
        <%= form.rich_text_area :content , value: "<h1>Default message</h1>"%>
        <%= @article.content %>
    </div>

    <div class="actions">
        <%= form.submit class:"btn btn-primary"%>
    </div>
    
<%end%>